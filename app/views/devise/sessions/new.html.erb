<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { class: "form "}) do |f| %>
  <nav class="navbar">
    <a href=<%= splash_screen_path %> class="menu-button">
        <%= image_tag("hamburger.png") %>
    </a>
    <h1 class="heading">Log In</h1>
    <div class="actions">
      <%= f.submit "Next", :class=> "menu-button" %>
    </div>
  </nav>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "name-select" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "name-select" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<% end %>

</section>
